# Telegram Bot
BOT_TOKEN=your_telegram_bot_token                # Telegram Bot Token，从 @BotFather 获取
ADMIN_USER_IDS=123456789,987654321              # 管理员用户 ID，多个用英文逗号分隔

# 代理配置（可选）
TELEGRAM_PROXY_ENABLED=true                      # 是否启用代理
TELEGRAM_PROXY_TYPE=socks5                       # 代理类型：http 或 socks5
TELEGRAM_PROXY_HOST=127.0.0.1                   # 代理服务器地址
TELEGRAM_PROXY_PORT=7897                        # 代理服务器端口
TELEGRAM_PROXY_AUTH=false                       # 是否需要代理认证
# TELEGRAM_PROXY_USERNAME=your_username         # 代理用户名（如需认证）
# TELEGRAM_PROXY_PASSWORD=your_password         # 代理密码（如需认证）

# Fragment API 配置
FRAGMENT_API_HASH=your_fragment_api_hash        # Fragment API Hash
FRAGMENT_API_COOKIE=your_fragment_api_cookie    # Fragment API Cookie
FRAGMENT_ACCOUNT_ADDRESS=your_account_address   # Fragment 账户地址
FRAGMENT_ACCOUNT_CHAIN=-239                     # Fragment 链 ID
FRAGMENT_ACCOUNT_WALLET_STATE_INIT=your_init    # Fragment 钱包初始化状态
FRAGMENT_ACCOUNT_PUBLIC_KEY=your_public_key     # Fragment 账户公钥
FRAGMENT_DEVICE_PLATFORM=mac                    # 设备平台
FRAGMENT_DEVICE_APP_NAME=Tonkeeper             # 应用名称
FRAGMENT_DEVICE_APP_VERSION=3.27.2             # 应用版本
FRAGMENT_DEVICE_MAX_PROTOCOL_VERSION=2         # 最大协议版本

# MongoDB 配置
MONGO_USER=premium_bot_user                     # MongoDB 用户名
MONGO_PASSWORD=your_strong_password             # MongoDB 密码
MONGODB_URI=mongodb://premium_bot_user:your_strong_password@localhost:27017/premium-bot?authSource=admin

# TRON 网络配置
TRON_NETWORK=mainnet                           # TRON 网络类型：mainnet 或 testnet
TRON_PRIVATE_KEY=your_private_key              # TRON 钱包私钥
TRON_ADDRESS=your_tron_address                 # TRON 钱包地址
TRON_API_KEY=your_trongrid_api_key            # TronGrid API Key

# TON 网络配置
TON_NETWORK=mainnet                            # TON 网络类型：mainnet 或 testnet
TON_API_KEY=your_toncenter_api_key            # TON Center API Key（主网）
TON_TESTNET_API_KEY=your_testnet_api_key      # TON Center API Key（测试网）
TON_MNEMONIC=your_wallet_mnemonic             # TON 钱包助记词（24个单词）

# JWT 配置（可选）
JWT_SECRET=your_jwt_secret                     # JWT 密钥

# 服务器配置
PORT=3000                                      # 服务器端口
NODE_ENV=development                           # 运行环境：development 或 production 